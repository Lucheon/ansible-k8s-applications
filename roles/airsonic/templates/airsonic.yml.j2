---
# Default values for airsonic.
# This is a YAML-formatted file.
# Declare variables to be passed into your templates.

replicaCount: 1

strategy:
  type: Recreate

image:
  repository: {{ airsonic_image_name }}
  pullPolicy: IfNotPresent
  tag: {{ airsonic_image_version }}

imagePullSecrets: []
nameOverride: ""
fullnameOverride: ""

podAnnotations: {}

podSecurityContext:
  fsGroup: {{ airsonic_run_group }}
  runAsUser: {{ airsonic_run_user }}
  runAsGroup: {{ airsonic_run_group }}

securityContext: {}

service:
  type: {{ airsonic_service_type }}
  port: {{ airsonic_service_port }}

ingress:
{% if airsonic_ingress_enabled | bool %}
  enabled: true
{% else %}
  enable: false
{% endif %}
  className: {{ airsonic_ingress_class_name }}
  annotations: {{ airsonic_ingress_annotations }}
  hosts:
{% for airsonic_ingress_host in airsonic_ingress_hosts %}
    - host: {{ airsonic_ingress_host.host }}
      paths:
        - path: {{ airsonic_ingress_host.path }}
          pathType: ImplementationSpecific
{% endfor %}
{% if airsonic_ingress_hosts | map(attribute="tls") is any %}
  tls:
{% for airsonic_ingress_host in airsonic_ingress_hosts if (airsonic_ingress_host.tls | bool) %}
  - secretName: airsonic-tls-{{ airsonic_ingress_host.host | replace('.','-') | replace('_','-') }}
    hosts:
      - {{ airsonic_ingress_host.host }}
{% endfor %}
{% else %}
  tls: []
{% endif %}

extraVolumes: {{ airsonic_volumes }}

extraVolumeMounts: {{ airsonic_volume_mounts }}

configuration:
  override: {{ airsonic_configuration_override }}
  properties: |
    {{ airsonic_configuration | indent(4) }}

persistence:
  data:
{% if airsonic_data_pv_enabled | bool %}
    enabled: true
{% else %}
    enabled: false
{% endif %}
    ## If defined, storageClassName: <storageClass>
    ## If set to "-", storageClassName: "", which disables dynamic provisioning
    ## If undefined (the default) or set to null, no storageClassName spec is
    ##   set, choosing the default provisioner.  (gp2 on AWS, standard on
    ##   GKE, AWS & OpenStack)
    ##
    storageClass: {{ airsonic_data_pv_storage_class }}
    annotations: {}
    accessModes: {{ airsonic_data_pv_access_modes | to_yaml }}
    size: {{ airsonic_data_pv_size }}
{% if airsonic_data_pv_existing_claim %}
    existingClaim: {{ airsonic_data_pv_existing_claim }}
{% endif %}
{% if airsonic_data_pv_data_source %}
    dataSource: {{ airsonic_data_pv_data_source }}
{% endif %}
{% if airsonic_data_pv_data_source_ref %}
    dataSourceRef: {{ airsonic_data_pv_data_source_ref }}
{% endif %}
{% if airsonic_data_pv_keep_on_uninstall | bool %}
    keepOnUninstall: true
{% endif %}

resources: {{ airsonic_resources }}
  # We usually recommend not to specify default resources and to leave this as a conscious
  # choice for the user. This also increases chances charts run on environments with little
  # resources, such as Minikube. If you do want to specify resources, uncomment the following
  # lines, adjust them as necessary, and remove the curly braces after 'resources:'.
  # limits:
  #   cpu: 100m
  #   memory: 128Mi
  # requests:
  #   cpu: 100m
  #   memory: 128Mi

autoscaling:
  enabled: false
  minReplicas: 1
  maxReplicas: 100
  targetCPUUtilizationPercentage: 80
  # targetMemoryUtilizationPercentage: 80

nodeSelector: {}

tolerations: []

affinity: {}
